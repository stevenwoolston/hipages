{
  "name": "hipages-asbestos-scraper",
  "private": true,
  "version": "0.0.1",
  "description": "A script to scrape hipages for leads containing a custom keyword and a React UI to display them.",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:scrape\" \"npm:ui\"",
    "scrape": "node --loader ts-node/esm src/scraper.ts",
    "ui": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "dotenv": "16.4.5",
    "nodemailer": "6.9.13",
    "puppeteer": "22.10.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/node": "20.12.12",
    "@types/nodemailer": "6.4.15",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react": "4.3.0",
    "concurrently": "8.2.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vite": "5.2.12"
  }
}
